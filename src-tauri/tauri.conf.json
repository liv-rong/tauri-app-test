{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app-test",
  "version": "0.1.0",
  "identifier": "com.rwr.tauri-app-test",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-app-test",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$RESOURCE/**",
          "$RESOURCE/**/*",
          "$RESOURCE/projects/**",
          "$RESOURCE/projects/**/*",
          "$RESOURCE/projects/studio/**",
          "$RESOURCE/projects/studio/**/*",
          "$RESOURCE/projects/studio/dist/**",
          "$RESOURCE/projects/studio/dist/**/*",
          "$RESOURCE/projects/project2/**",
          "$RESOURCE/projects/project2/**/*",
          "$RESOURCE/projects/project2/dist/**",
          "$RESOURCE/projects/project2/dist/**/*",
          "$RESOURCE/projects/project3/**",
          "$RESOURCE/projects/project3/**/*",
          "$RESOURCE/projects/project3/dist/**",
          "$RESOURCE/projects/project3/dist/**/*"
        ]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../projects/**/*"
    ]
  },
  "plugins": {
    "window": {
      "all": true,
      "create": true
    }
  }
}
